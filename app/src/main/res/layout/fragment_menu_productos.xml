<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.productos.MenuProductosFragment"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/IB_AgregarProducto"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF"
                android:src="@mipmap/agregarproducto_foreground" />

            <ImageButton
                android:id="@+id/IB_EliminarProducto"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="@color/azulc"
                android:src="@mipmap/eliminarproducto_foreground" />

            <ImageButton
                android:id="@+id/IB_BuscarProducto"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="@color/boton_colores"
                android:src="@mipmap/buscarproducto_foreground" />

            <ImageButton
                android:id="@+id/IB_ImprimirProducto"
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:backgroundTint="@color/boton_colores"
                android:src="@mipmap/impresoraproducto_foreground" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ListRecyclerViewproductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp" />
    </LinearLayout>

</FrameLayout>