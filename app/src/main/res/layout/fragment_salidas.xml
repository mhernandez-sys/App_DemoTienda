<!-- res/layout/activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center">

        <TextView
            android:id="@+id/TV_Clientes"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Cliente:"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/sp_cliente"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_weight="0.30"
            android:layout_marginLeft="6dp"
            android:paddingLeft="4dp"
            android:background="@drawable/borde_redondeado2">
            <!-- Aquí coloca los elementos que desees dentro del Spinner -->
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center">

        <TextView
            android:id="@+id/TV_Productos"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Producto:"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/sp_producto"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_weight="0.30"
            android:layout_marginLeft="6dp"
            android:paddingLeft="4dp"
            android:background="@drawable/borde_redondeado2">
            <!-- Aquí coloca los elementos que desees dentro del Spinner -->
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center">

        <TextView
            android:id="@+id/TV_PiezasAñadidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Piezas vendidas:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ET_SalidasArtEsperados"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="0.30"
            android:background="@drawable/borde_redondeado2"
            android:inputType="number"
            android:focusable="true"
            android:paddingLeft="8dp"
            android:hint="Numero de piezas"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_add_unidad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Fecha:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ET_FechaSalidas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.30"
            android:paddingLeft="4dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

            <CheckBox
                android:id="@+id/CB_SalLote"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_margin="10dp"
                android:buttonTint="@color/azul1.1"
                android:text="Lotes" />

        <LinearLayout
            android:id="@+id/LL_SalidasLote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Num. de Lote:"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/Et_SalNumlote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:hint="Inserte cantidad"
                    android:paddingLeft="4dp"
                    android:inputType="number"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Piezas:"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/ET_SalPiezasCaja"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:hint="Numero de piezas"
                    android:inputType="number"
                    android:paddingLeft="4dp"
                    android:textSize="16dp" />

            </LinearLayout>

            <Button
                android:id="@+id/BT_SalAñadir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/boton_colores"
                android:text="Añadir"
                android:textColor="@color/white" />

        </LinearLayout>


        <CheckBox
            android:id="@+id/CB_SalUnidad"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_margin="10dp"
            android:text="Número de serie"
            android:buttonTint="@color/azul1.1"
            android:layout_marginBottom="16dp" />

</LinearLayout>
