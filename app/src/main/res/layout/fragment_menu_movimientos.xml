<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Movimientos.MenuMovimientosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <SearchView
            android:id="@+id/SV_BusquedaMoviminetos"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_margin="4dp"
            android:background="@drawable/borde_redondeado2"
            android:backgroundTint="@color/azulgris2"
            android:iconifiedByDefault="false"
            android:padding="6dp"
            android:visibility="visible" />

        <View
            android:id="@+id/divisormovimientos"
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:background="@color/azulgris"
            android:padding="4dp"
            android:layout_margin="4dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="horizontal"
            android:padding="4dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/IB_BuscarMovominetos"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:src="@mipmap/buscarproducto_foreground" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ListRecyclerViewMovimientos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp" />

    </LinearLayout>


</FrameLayout>