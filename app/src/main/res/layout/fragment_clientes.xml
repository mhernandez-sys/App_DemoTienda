<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_text_cliente_1"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_margin="10dp"
        android:hint="Nombre de Cliente"
        android:background="@drawable/borde_redondeado"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edit_text_cliente_2"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_margin="10dp"
        android:hint="RFC"
        android:background="@drawable/borde_redondeado"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/edit_text_cliente_3"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_margin="10dp"        android:hint="Clave cliente"
        android:background="@drawable/borde_redondeado"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="4dp">

        <Button
            android:id="@+id/button_save_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/boton_colores"
            android:text="Guardar"
            android:textColor="@color/white"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/button_cancelar_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/boton_colores"
            android:text="Cancelar"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>
