<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">


    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:text="RFID:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/BA_Em_rfid"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/borde_redondeado"
                    android:hint="Ingrese RFID"
                    android:contentDescription="Campo para ingresar RFID" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:gravity="center">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="N.Ser:"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/BA_Em_numeroser"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/borde_redondeado"
                    android:hint="Ingrese Número de Serie"
                    android:contentDescription="Campo para ingresar Número de Serie" />
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/black">


            </View>
            <TextView
                android:id="@+id/tv_add_tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:text="Descripcion del Activo:"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/BA_Em_producto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@drawable/bordetv"
                android:gravity="center"
                android:textColor="@color/gris"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:gravity="center">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:text="Dep P:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/BA_Em_departamento"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/borde_redondeado">
                    <!-- Aquí coloca los elementos que desees dentro del TextView -->
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:gravity="center">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:text="Al Res:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/BA_Em_almacenR"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/borde_redondeado">
                    <!-- Aquí coloca los elementos que desees dentro del TextView -->
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_add_unidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:text="Sucur:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/BA_Em_sucursales"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/borde_redondeado">
                    <!-- Aquí coloca los elementos que desees dentro del TextView -->
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_add_claveActivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:text="Estatus:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/BA_Em_Estatus"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/borde_redondeado">
                    <!-- Aquí coloca los elementos que desees dentro del TextView -->
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/asignacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:text="Asig A:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/BA_Em_Asignacion"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0.255"
                    android:background="@drawable/borde_redondeado" />
                <!-- Aquí coloca los elementos que desees dentro del Spinner -->
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp">


            </View>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motivo de la Baja"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/Id_motivo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/grisclaro"
                android:gravity="top"
                android:textSize="14dp"
                android:contentDescription="Escriba el motivo"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_margin="20dp"/>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/btnBaja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Baja"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/boton_colores"
                    android:layout_marginRight="30dp" />

                <Button
                    android:id="@+id/btn_Asigcancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Cancelar"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/boton_colores" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>